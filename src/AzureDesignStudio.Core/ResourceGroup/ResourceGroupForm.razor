@using AzureDesignStudio.Core.Models
@using Blazor.Diagrams.Core
@using Blazor.Diagrams.Core.Models
<Row Gutter="(8, 8)">
    <Col Span="24">
        <Text Style="font-size: small">Name</Text>
        <Input Placeholder="resource group name" TValue="string" Size=@InputSize.Small
            @bind-Value="((ResourceGroupModel)Node).Name"></Input>
    </Col>
    <Col Span="24">
        <Text Style="font-size: small">Region</Text>
        <Select DataSource="AzureRegions.AllRegions" @bind-Value="((ResourceGroupModel)Node).Location"
            LabelName="@nameof(Region.Name)" ValueName="@nameof(Region.Value)"
            Placeholder="Select the region" DefaultActiveFirstItem="false" Size="small"
            EnableSearch>
    </Select>
    </Col>
</Row>

@code {
    [CascadingParameter]
    public NodeModel Node { get; set; } = null!;
    [CascadingParameter]
    public Diagram Diagram { get; set; } = null!;
}
